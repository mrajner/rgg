#!/bin/bash

tmpfile=$(mktemp)
./expand_date reverse < rgg.cls | ./expand_date > $tmpfile && cat $tmpfile > rgg.cls

tput setaf 210
echo updating \$Version\$ and \$Date\$ in rgg.cls
tput sgr0

cecho 2 "From log:     $(git log -1 --pretty=format:"%ai")"
echo  2 "From rgg.cls: $(grep Date rgg.cls |sed 's/%%.Date:\s*//')"

cecho 3 "From log:     $(git describe)"
cecho 3"From rgg.cls: $(grep Date rgg.cls |sed 's/%%.Version:\s*//')"
