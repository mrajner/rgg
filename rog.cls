%% process class options
\RequirePackage{kvoptions}
\SetupKeyvalOptions{
   family=rog,
   prefix=rog@,
}
\DeclareStringOption{startpage}
\DeclareStringOption{volume}
\DeclareStringOption{doi}
\DeclareBoolOption{review}
\ProcessKeyvalOptions*
\setcounter{page}{\rog@startpage}

\ifrog@review
